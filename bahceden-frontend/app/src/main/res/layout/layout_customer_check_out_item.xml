<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/long_button_background"
    android:backgroundTint="@color/white"
    android:elevation="10dp"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/checkoutProductImageCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/checkoutProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/strawberry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/checkoutProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nexa_heavy"
        android:text="Red Ã‡ilek"
        android:textColor="@color/bahceden_green"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/checkoutProductImageCard"
        app:layout_constraintTop_toTopOf="@id/checkoutProductImageCard" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Samsun"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/checkoutProductName"
        app:layout_constraintTop_toBottomOf="@id/checkoutProductName" />


    <TextView
        android:id="@+id/checkoutProductAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/bahceden_green"
        android:gravity="center"
        android:padding="8dp"
        android:text="5 KG"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/checkoutProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="$000"
        android:textColor="@color/bahceden_green"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkoutProductImageCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
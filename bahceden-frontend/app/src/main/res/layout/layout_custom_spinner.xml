<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/customSpinnerItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/customSpinnerDropDownIcon"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/spinnerLayoutIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_dairy_products" />

        <TextView
            android:id="@+id/spinnerLayoutText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/nexa_heavy"
            android:padding="10dp"
            android:text="Dairy"
            android:textColor="@color/bahceden_green"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/customSpinnerDropDownIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_dropdown" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="128dp"
    android:layout_height="192dp"
    android:layout_marginHorizontal="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/bahceden_foreground"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/hotSalesItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="64dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:contentPadding="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jam" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/hotSalesItemName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_heavy"
                android:text="Cranberry Jam"
                android:textColor="@color/bahceden_green"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/hotSalesItemRating"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/hotSalesItemImage"
                app:layout_constraintTop_toBottomOf="@id/hotSalesItemImage" />

            <TextView
                android:id="@+id/hotSalesItemRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/nexa_heavy"
                android:text="4.6"
                android:textColor="@color/bahceden_green"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/hotSalesItemName"
                app:layout_constraintEnd_toStartOf="@id/hotSalesItemStar"
                app:layout_constraintTop_toTopOf="@id/hotSalesItemName" />

            <ImageView
                android:id="@+id/hotSalesItemStar"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@id/hotSalesItemName"
                app:layout_constraintEnd_toEndOf="@id/hotSalesItemImage"
                app:layout_constraintTop_toTopOf="@id/hotSalesItemName"
                app:tint="@color/star_yellow" />

            <TextView
                android:id="@+id/hotSalesItemSalerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nexa_heavy"
                android:paddingHorizontal="8dp"
                android:text="Şifa Gıda"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>